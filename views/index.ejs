<!-- Header  Section -->
<%- include('./partials/header.ejs')  %>

<!-- Body  Section -->


<div class="container">
  <div class="row">
    <div class="col-6 mt-3">
      <h2 class="alert alert-success text-center">Add New Students</h2>
      <form method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="text" class="form-control" id="age" name="age">
        </div>
        <div class="mb-3">
          <label for="fees" class="form-label">Fees</label>
          <input type="text" class="form-control" id="fees" name="fees">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-6 mt-3">
      <h2 class="alert alert-danger text-center">List Of Students</h2>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Fees</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          
          <% for( let i = 0; i < result.length; i++ ) { %>
            
            <tr>
              <td> <%= i+1 %></td>
              <td> <%= result[i].name %> </td>
              <td> <%= result[i].age  %> </td>
              <td> <%= result[i].fees.toString()  %> </td>
              <td>
                <div style="display: flex;">
                  <form action="/student/edit/<%= result[i]._id %>" method="get" class="mr-2">
                    <button class="btn btn-primary btn-sm">Update</button>
                  </form>
                  <form action="/student/delete/<%= result[i]._id %>" method="post">
                    <button class="btn btn-danger btn-sm" >Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% } %>
            
         
          
        </tbody>
      </table>
    </div>
  </div>
</div>


 



<!-- Includ Static Files -->
  <script src="/js/bootstrap.bundle.js"></script>


